<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/llp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/player" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_toEndOf="@id/iv1"
                android:id="@+id/player1RecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:background="@drawable/circular_background"
                android:padding="4dp"
                android:text="0"
                android:textColor="#ffffff" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/player" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/player2RecyclerView"
                android:layout_toEndOf="@id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circular_background"
                android:padding="4dp"
                android:text="0"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llp3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/player" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_toEndOf="@+id/iv3"
                android:id="@+id/player3RecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvP3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circular_background"
                android:padding="4dp"
                android:text="0"
                android:textColor="#ffffff" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/dealer" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/delerRecyclerView"
                android:layout_toEndOf="@id/iv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circular_background"
                android:padding="4dp"
                android:text="0"
                android:textColor="#ffffff" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/llButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/hitButton"
                style="@style/GameButton"
                android:layout_weight="1"
                android:text="Hit" />

            <Button
                android:id="@+id/standButton"
                style="@style/GameButton"
                android:layout_weight="1"
                android:text="Stand" />

            <Button
                android:id="@+id/splitButton"
                style="@style/GameButton"
                android:layout_weight="1"
                android:text="Split" />

            <Button
                android:id="@+id/doubleButton"
                style="@style/GameButton"
                android:layout_weight="1"
                android:text="Double" />
        </LinearLayout>

        <Button
            android:id="@+id/dealButton"
            style="@style/GameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Deal" />

        <Button
            android:id="@+id/clearButton"
            style="@style/GameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Clear"
            android:visibility="gone" />


    </LinearLayout>

</ScrollView>
